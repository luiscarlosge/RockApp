<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Handler for Python applications -->
    <handlers>
      <add name="PythonHandler" path="*" verb="*" modules="httpPlatformHandler" resourceType="Unspecified"/>
    </handlers>
    
    <!-- HTTP Platform Handler configuration for Azure App Service -->
    <httpPlatform processPath="D:\home\Python39\python.exe"
                  arguments="D:\home\site\wwwroot\startup.py"
                  stdoutLogEnabled="true"
                  stdoutLogFile="D:\home\LogFiles\python.log"
                  startupTimeLimit="60"
                  processesPerApplication="16">
      <environmentVariables>
        <environmentVariable name="SERVER_PORT" value="%HTTP_PLATFORM_PORT%" />
        <environmentVariable name="PORT" value="%HTTP_PLATFORM_PORT%" />
        <environmentVariable name="PYTHONPATH" value="D:\home\site\wwwroot" />
        <environmentVariable name="FLASK_ENV" value="production" />
      </environmentVariables>
    </httpPlatform>
    
    <!-- Static file handling -->
    <staticContent>
      <mimeMap fileExtension=".css" mimeType="text/css" />
      <mimeMap fileExtension=".js" mimeType="application/javascript" />
      <mimeMap fileExtension=".csv" mimeType="text/csv" />
    </staticContent>
    
    <!-- Security headers -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="DENY" />
        <add name="X-XSS-Protection" value="1; mode=block" />
      </customHeaders>
    </httpProtocol>
    
    <!-- URL rewrite rules for SPA behavior -->
    <rewrite>
      <rules>
        <!-- Serve static files directly -->
        <rule name="StaticFiles" stopProcessing="true">
          <match url="^(static/.*|favicon\.ico|robots\.txt)$" />
          <action type="None" />
        </rule>
        
        <!-- Handle API routes -->
        <rule name="APIRoutes" stopProcessing="true">
          <match url="^api/.*" />
          <action type="None" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- Default document -->
    <defaultDocument>
      <files>
        <clear />
        <add value="startup.py" />
      </files>
    </defaultDocument>
    
    <!-- Error handling -->
    <httpErrors errorMode="Detailed" />
    
  </system.webServer>
  
  <!-- Application settings -->
  <appSettings>
    <add key="PYTHONPATH" value="D:\home\site\wwwroot" />
    <add key="FLASK_ENV" value="production" />
  </appSettings>
</configuration>