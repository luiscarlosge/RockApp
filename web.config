<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <system.webServer>
    <!-- Handler for Python applications -->
    <handlers>
      <add name="PythonHandler" path="*" verb="*" modules="httpPlatformHandler" resourceType="Unspecified"/>
    </handlers>
    
    <!-- HTTP Platform Handler configuration for Azure App Service with WebSocket support -->
    <httpPlatform processPath="D:\home\Python39\python.exe"
                  arguments="D:\home\site\wwwroot\startup.py"
                  stdoutLogEnabled="true"
                  stdoutLogFile="D:\home\LogFiles\python.log"
                  startupTimeLimit="60"
                  processesPerApplication="16"
                  requestTimeout="00:04:00"
                  enableXFF="true">
      <environmentVariables>
        <environmentVariable name="SERVER_PORT" value="%HTTP_PLATFORM_PORT%" />
        <environmentVariable name="PORT" value="%HTTP_PLATFORM_PORT%" />
        <environmentVariable name="PYTHONPATH" value="D:\home\site\wwwroot" />
        <environmentVariable name="FLASK_ENV" value="production" />
        <!-- WebSocket and SocketIO specific environment variables -->
        <environmentVariable name="WEBSOCKET_ENABLED" value="true" />
        <environmentVariable name="SOCKETIO_ASYNC_MODE" value="threading" />
        <environmentVariable name="SOCKETIO_PING_TIMEOUT" value="60" />
        <environmentVariable name="SOCKETIO_PING_INTERVAL" value="25" />
      </environmentVariables>
    </httpPlatform>
    
    <!-- WebSocket support configuration -->
    <webSocket enabled="true" />
    
    <!-- Enable WebSocket protocol upgrade -->
    <httpProtocol>
      <customHeaders>
        <add name="X-Content-Type-Options" value="nosniff" />
        <add name="X-Frame-Options" value="DENY" />
        <add name="X-XSS-Protection" value="1; mode=block" />
        <!-- WebSocket and CORS headers for SocketIO -->
        <add name="Access-Control-Allow-Origin" value="*" />
        <add name="Access-Control-Allow-Methods" value="GET, POST, OPTIONS, PUT, DELETE" />
        <add name="Access-Control-Allow-Headers" value="Content-Type, Authorization, X-Requested-With" />
        <add name="Access-Control-Allow-Credentials" value="true" />
      </customHeaders>
    </httpProtocol>
    
    <!-- Static file handling -->
    <staticContent>
      <mimeMap fileExtension=".css" mimeType="text/css" />
      <mimeMap fileExtension=".js" mimeType="application/javascript" />
      <mimeMap fileExtension=".csv" mimeType="text/csv" />
    </staticContent>
    
    <!-- URL rewrite rules for SPA behavior and WebSocket support -->
    <rewrite>
      <rules>
        <!-- WebSocket upgrade rule - must be first -->
        <rule name="WebSocketUpgrade" stopProcessing="true">
          <match url="socket\.io/.*" />
          <conditions>
            <add input="{HTTP_UPGRADE}" pattern="websocket" ignoreCase="true" />
            <add input="{HTTP_CONNECTION}" pattern="upgrade" ignoreCase="true" />
          </conditions>
          <action type="None" />
        </rule>
        
        <!-- Additional WebSocket upgrade handling -->
        <rule name="WebSocketUpgradeGeneral" stopProcessing="true">
          <match url=".*" />
          <conditions>
            <add input="{HTTP_UPGRADE}" pattern="websocket" ignoreCase="true" />
            <add input="{HTTP_CONNECTION}" pattern="upgrade" ignoreCase="true" />
          </conditions>
          <action type="None" />
        </rule>
        
        <!-- SocketIO polling fallback -->
        <rule name="SocketIOPolling" stopProcessing="true">
          <match url="^socket\.io/.*" />
          <action type="None" />
        </rule>
        
        <!-- Serve static files directly -->
        <rule name="StaticFiles" stopProcessing="true">
          <match url="^(static/.*|favicon\.ico|robots\.txt)$" />
          <action type="None" />
        </rule>
        
        <!-- Handle API routes -->
        <rule name="APIRoutes" stopProcessing="true">
          <match url="^api/.*" />
          <action type="None" />
        </rule>
        
        <!-- Handle global selector route -->
        <rule name="GlobalSelector" stopProcessing="true">
          <match url="^global-selector$" />
          <action type="None" />
        </rule>
      </rules>
    </rewrite>
    
    <!-- Default document -->
    <defaultDocument>
      <files>
        <clear />
        <add value="startup.py" />
      </files>
    </defaultDocument>
    
    <!-- Error handling -->
    <httpErrors errorMode="Detailed" />
    
    <!-- Request filtering for WebSocket support -->
    <security>
      <requestFiltering>
        <!-- Allow WebSocket upgrade requests -->
        <verbs>
          <add verb="GET" allowed="true" />
          <add verb="POST" allowed="true" />
          <add verb="OPTIONS" allowed="true" />
          <add verb="PUT" allowed="true" />
          <add verb="DELETE" allowed="true" />
        </verbs>
        <!-- Increase max content length for WebSocket frames -->
        <requestLimits maxAllowedContentLength="104857600" maxQueryString="32768" />
      </requestFiltering>
    </security>
    
    <!-- Compression settings optimized for WebSocket -->
    <httpCompression>
      <dynamicTypes>
        <clear />
        <add enabled="true" mimeType="text/*" />
        <add enabled="true" mimeType="message/*" />
        <add enabled="true" mimeType="application/javascript" />
        <add enabled="true" mimeType="application/json" />
        <add enabled="false" mimeType="*/*" />
      </dynamicTypes>
      <staticTypes>
        <clear />
        <add enabled="true" mimeType="text/*" />
        <add enabled="true" mimeType="message/*" />
        <add enabled="true" mimeType="application/javascript" />
        <add enabled="true" mimeType="application/atom+xml" />
        <add enabled="true" mimeType="application/xaml+xml" />
        <add enabled="false" mimeType="*/*" />
      </staticTypes>
    </httpCompression>
    
  </system.webServer>
  
  <!-- Application settings for WebSocket and SocketIO -->
  <appSettings>
    <add key="PYTHONPATH" value="D:\home\site\wwwroot" />
    <add key="FLASK_ENV" value="production" />
    <!-- WebSocket specific settings -->
    <add key="WEBSOCKET_ENABLED" value="true" />
    <add key="SOCKETIO_ASYNC_MODE" value="threading" />
    <add key="SOCKETIO_PING_TIMEOUT" value="60" />
    <add key="SOCKETIO_PING_INTERVAL" value="25" />
    <add key="SOCKETIO_CORS_ALLOWED_ORIGINS" value="*" />
    <!-- Azure App Service specific settings -->
    <add key="WEBSITE_NODE_DEFAULT_VERSION" value="18.17.1" />
    <add key="SCM_DO_BUILD_DURING_DEPLOYMENT" value="true" />
  </appSettings>
</configuration>